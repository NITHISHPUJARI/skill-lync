#include "stm32g0xx.h"

uint8_t volatile g_button_pressed = 0;

void button_init(void);
void EXTI4_15_IRQHandler(void);

int main(void) {
  RCC->IOPENR |= RCC_IOPENR_IOPAEN; // Enable PORTA
  GPIOA->MODER &= ~(GPIO_MODER_MODE5_Msk); // Clear MODE bits for 5th pin (PA-5)
  GPIOA->MODER |= GPIO_MODER_MODE5_0; // Set MODE bits for 5th pin (PA-5) to 01 (set output)

  RCC->IOPENR |= RCC_IOPENR_IOPCEN; // Enable PORTC
  GPIOC->MODER &= ~(GPIO_MODER_MODE13_Msk); // Clear MODE bits for 13th pin (PC-13) (set input)

  button_init();

  while (1) {
    if (g_button_pressed) {
      GPIOA->ODR ^= GPIO_ODR_OD5; // Toggle PA-5
      g_button_pressed = 0;
    } else {
      GPIOB->ODR |= GPIO_ODR_OD14; // Turn on PB-14
    }
  }
}

void button_init() {
  RCC->APBENR2 |= RCC_APBENR2_SYSCFGEN; // Enable SYSCFGEN
  EXTI->RTSR1 |= EXTI_RTSR1_RT13; // Enable interrupt on rising edge at EXTI line 13
  SYSCFG->EXTICR[3] |= SYSCFG_EXTICR4_EXTI13_PC; // Set PC-13 as GPIO pin for interrupt
  EXTI->IMR1 |= EXTI_IMR1_IM13; // Unmask EXTI line 13
  NVIC_EnableIRQ(EXTI4_15_IRQn); // Enable interrupts for EXTI4_15
}

void EXTI4_15_IRQHandler(void) {
  g_button_pressed = 1;
  GPIOB->ODR &= ~(GPIO_ODR_OD14); // Turn off PB-14
  EXTI->RPR1 |= EXTI_RPR1_RPIF13; // Clear pending bit for line 13
}
