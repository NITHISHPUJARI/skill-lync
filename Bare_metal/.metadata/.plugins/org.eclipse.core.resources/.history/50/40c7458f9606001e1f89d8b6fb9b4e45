#include <stm32g070xx.h>

void delay(unsigned int a);


int main()
{
	RCC->IOPENR = (1<<0) | (1<<1) | (1<<2);
	GPIOA->MODER |= (1<<10);
	GPIOA->MODER &= ~(1<<11);
	GPIOB->MODER |= (1<<28);
	GPIOB->MODER &= ~(1<<29);
	GPIOC->MODER &= ~(1<<26);
	GPIOC->MODER &= ~(1<<27);

	while(1)
	{
		if((GPIOC->IDR |= (1<<13)) == 0)
		{
		GPIOA->ODR |= (1<<5);
		delay(1000);
		GPIOA->ODR &= ~(1<<5);
		delay(1000);
		}
		else
		{
			GPIOB->ODR |= (1<<14);
			delay(1000);
			GPIOB->ODR &= ~(1<<14);
			delay(1000);
		}
	}
}


void delay(unsigned int a)
{
	unsigned int i,j;
	for(i =0; i<a; i++)
		for (j = 0; j<1000; j++);
}

